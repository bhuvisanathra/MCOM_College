<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:columnCount="1"
                android:paddingHorizontal="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:paddingBottom="5dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/TodaysDate"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/todaydate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:drawableRight="@drawable/calendar_icon"
                            android:drawablePadding="5dp"
                            android:hint="Today's Date"
                            android:padding="5dp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/EnterDOB"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/todaydate"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:drawableRight="@drawable/calendar_icon"
                            android:drawablePadding="5dp"
                            android:hint="@string/EnterDOB"
                            android:padding="5dp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            app:layout_constraintVertical_bias="0.0" />

                        <Button
                            android:id="@+id/calculate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/CALCULATE"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@drawable/curve"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/dob"
                            app:layout_constraintVertical_bias="0.0" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/TimeSpentonEarth"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/orange"
                            android:gravity="center"
                            android:layout_margin="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Years"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:id="@+id/spendYear"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="00"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="22sp"
                                    android:background="@drawable/calendar_today"
                                    android:padding="15dp"
                                    android:paddingTop="30dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Months"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:id="@+id/spendMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="00"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="22sp"
                                    android:background="@drawable/calendar_today"
                                    android:padding="15dp"
                                    android:paddingTop="20dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Day"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:id="@+id/spendDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:textColor="?android:attr/textColorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="22sp"
                                    android:background="@drawable/calendar_today"
                                    android:padding="15dp"
                                    android:paddingTop="20dp"
                                    android:text="00"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/YourNextBirthdayIn.."
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:gravity="center"
                                android:layout_margin="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cake"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/nxtBday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000 Days"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="?android:attr/textColorPrimary"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/YourNextBirthdayIn.."
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:gravity="center"
                                android:layout_margin="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cake"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/Totalhours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000 Hours"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="?android:attr/textColorPrimary"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/YourNextBirthdayIn.."
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:gravity="center"
                                android:layout_margin="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_cake"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:id="@+id/Totalmini"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000 Minutes"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                android:textColor="?android:attr/textColorPrimary"/>

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/KnowinAdvanceyourNext5Birthdays"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:gravity="center"
                                android:layout_margin="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/day1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000 Days, (00-00-000,Sunday)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                            <TextView
                                android:id="@+id/day2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000 Days, (00-00-000,Sunday)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                            <TextView
                                android:id="@+id/day3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000 Days, (00-00-000,Sunday)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/day4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000 Days, (00-00-000,Sunday)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/day5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000 Days, (00-00-000,Sunday)"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:strokeColor="?android:attr/textColorPrimary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/KnowinAdvanceyourNext5Birthdays"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:gravity="center"
                                android:layout_margin="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/year"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                            <TextView
                                android:id="@+id/year1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year:- Month:- Days:-"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                            <TextView
                                android:id="@+id/year2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year:- Month:- Days:-"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/year3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year:- Month:- Days:-"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/year4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Year:- Month:- Days:-"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="5dp"
                                android:gravity="center|center_horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>